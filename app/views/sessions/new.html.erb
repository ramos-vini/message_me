<h1>Login</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= f.label :username, "Username / Email" %>
  <br>
  <%= f.text_field :username %>
  <br><br>

  <%= f.label :password %>
  <br>
  <%= f.password_field :password %>
  <br><br>

  <%= f.submit "Log in" %>
<% end %>

<br>
<%= link_to "Don't have an account?", root_path %>

<br><br>
<%= link_to "Return", root_path %>